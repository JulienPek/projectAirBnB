{% extends 'base.html.twig' %}

{% block title %}BienLocController!{% endblock %}

{% block body %}
<div class="container">
    <div class="card-group">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="{{bienList.image}}" class="img-fluid rounded-start" alt="image moisie">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title">{{bienList.title}}</h3>
                            <h4 class="card-category">{{bienList.capacity}}</h4>
                            <h4 class="card-category">{{bienList.price}}</h4>
                            <p class="card-text">{{bienList.description}}</p>
                                <h5 class="card-text"><small class="text-muted">{{bienList.adress}}</small></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
